---
import "@styles/main.css";
import "@styles/whitney.css";

import Card from "@components/discord/Card";
import Icon from "@components/Icon.astro";
import Link from "@components/Link.astro";
import Document from "@layouts/Document.astro";
---

<Document>
	<section
		class="place-content-center container mx-auto m-auto w-auto grow justify-center flex md:flex-row flex-col items-center"
	>
		<div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex-col md:items-start mb-16 md:mb-0 justify-center">
			<div class="flex flex-col xl:flex-row justify-between items-center">
				<div class="px-24">
					<h1 class="text-6xl font-bold leading-tight text-zinc-800 dark:text-white justify-center text-center">
						Hiyu, I'm <span class="text-pink-400">Niskii</span>!
					</h1>
					<h2 class="text-2xl font-light text-zinc-800 dark:text-white justify-center text-center xl:text-start">
						Software Engineer, Fullstack Developer
					</h2>

					<nav class="flex gap-4 mt-4 justify-center xl:justify-start">
						<Link href="mailto:business@niskii.dev" label="Email">
							<Icon class="text-3xl" icon="i-octicon-mail" />
						</Link>

						<Link href="https://github.com/whoisniskii" label="GitHub">
							<Icon class="text-3xl" icon="i-octicon-mark-github-16" />
						</Link>

						<Link href="https://open.spotify.com/user/wu6vyqmi5jig37nh6nkp3wzhg" label="Spotify">
							<Icon class="text-3xl" icon="i-fa6-brands-spotify" />
						</Link>

						<Link href="https://twitter.com/whoisniskii" label="Twitter">
							<Icon class="text-3xl" icon="i-fa6-brands-twitter" />
						</Link>

						<Link href="https://instagram.com/whoisniskii" label="Instagram">
							<Icon class="text-3xl" icon="i-fa6-brands-instagram" />
						</Link>
					</nav>
				</div>

				<div class="mt-12 xl:mt-0 justify-center items-center">
					<Card client:load />
				</div>
			</div>
		</div>
	</section>
</Document>
